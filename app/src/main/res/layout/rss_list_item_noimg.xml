<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">


                <TextView
                    android:id="@+id/rss_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rss_desc_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rss_title_view"
                    android:maxLines="3"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/rss_pubid_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rss_desc_view"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rss_desc_view"
                    android:textSize="10dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/feed_image"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/rss_pubid_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feed_text"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/rss_pubid_view"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_toRightOf="@+id/feed_image"/>
            </RelativeLayout>
        </FrameLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>